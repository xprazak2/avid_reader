<% provide(:title, 'Create new book') %>
<h1>Create new book</h1>
<div class="row"> 
 <div class="span6 offset3">
  <%= form_for(@book) do |f| %>
    <%= render 'shared/book_error_messages' %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :author %>
    <%= f.text_field :author %>

    <%= f.submit "Create new book", class: "btn btn-large btn-inverse"%>
  <% end %>
 </div>
</div>


